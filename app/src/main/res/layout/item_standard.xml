<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_standard_brief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_standard_label"
        app:layout_constraintEnd_toStartOf="@+id/item_standard_icon" />

    <TextView
        android:id="@+id/item_standard_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:gravity="start|center_vertical"
        android:maxEms="10"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_standard_icon"
        android:layout_width="22dp"
        android:layout_height="24dp"
        android:layout_marginEnd="32dp"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/item_standard_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_standard_label"
        app:srcCompat="@drawable/right_arrow"
        tools:ignore="ImageContrastCheck"
        android:contentDescription="TODO" />

    <TextView
        android:id="@+id/item_standard_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/item_standard_label" />
</androidx.constraintlayout.widget.ConstraintLayout>